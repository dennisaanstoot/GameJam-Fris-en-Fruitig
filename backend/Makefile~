
CC=gcc

LFLAGS = -ljson-c -lwebsockets -lm -lpthread
CFLAGS = -Wall -Os

all: server

server: list.o entity.o game.o json.o main.o field.o
	$(CC) entity.o game.o main.o json.o list.o field.o $(LFLAGS) -o server -g

main.o: main.c
	$(CC) $(CFLAGS) -g -c main.c 

entity.o: entity.c
	$(CC) $(CFLAGS) -g -c entity.c 

list.o: list.c
	$(CC) $(CFLAGS) -g -c list.c 

json.o: json.c
	$(CC) $(CFLAGS) -g -c json.c

game.o: game.c
	$(CC) $(CFLAGS) -g -c game.c

field.o: field.c
	$(CC) $(CFLAGS) -g -c field.c

clean:
	rm *.o server
